<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_variant</item>
    <item name="android:statusBarColor">@color/status_bar_color</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="actionMenuTextColor">@color/primary</item>
    <item name="colorAccent">@color/flamingo</item>
    <item name="colorControlHighlight">@color/grey_transparent_17</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>
    <item name="android:windowActivityTransitions">true</item>
  </style>
</resources>